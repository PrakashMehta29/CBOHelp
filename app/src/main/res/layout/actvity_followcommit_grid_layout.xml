<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_margin="3dp"
        android:orientation="vertical"
        android:background="@drawable/custom_square_transparent_bg">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5dp">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="fill_parent"
                        android:gravity="center|left"
                        android:text="Party"
                        android:textColor="@android:color/black"
                        android:textSize="17sp"
                        android:typeface="sans" />

                    <LinearLayout
                        android:id="@+id/layout_party"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/custom_square_transparent_bg"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/party_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:background="#fff"
                            android:hint="Party Name"
                            android:maxLines="1"
                            android:padding="5dp" />


                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="fill_parent"
                        android:gravity="center|left"
                        android:text="Mobile No"
                        android:textColor="@android:color/black"
                        android:textSize="17sp" />

                    <LinearLayout
                        android:id="@+id/layout_mobile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/custom_square_transparent_bg"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/party_mobile_no"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:background="#fff"
                            android:hint="Mobile No"
                            android:maxLength="13"
                            android:inputType="phone"
                            android:maxLines="1"
                            android:padding="5dp" />


                    </LinearLayout>


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="fill_parent"
                        android:gravity="center|left"
                        android:text="Person"
                        android:textColor="@android:color/black"
                        android:textSize="17sp" />

                    <LinearLayout
                        android:id="@+id/layout_parerson"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/custom_square_transparent_bg"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/party_person"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:background="#fff"
                            android:hint="Person"

                            android:singleLine="true"
                            android:maxLines="1"
                            android:padding="5dp" />


                    </LinearLayout>


                </LinearLayout>

                <LinearLayout

                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:minHeight="50dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="fill_parent"
                        android:gravity="center|left"
                        android:text="FollowDate"
                        android:textColor="@android:color/black"
                        android:textSize="17sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/custom_square_transparent_bg"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <Spinner
                            android:id="@+id/followdate"
                            android:layout_width="match_parent"

                            android:layout_height="wrap_content"
                            android:layout_marginLeft="3dp"
                            android:layout_weight="1"
                            android:background="@android:color/transparent"
                            android:padding="3dp" />

                        <View
                            android:layout_width="1.5dp"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="3.5dp"
                            android:layout_marginTop="3.5dp"
                            android:background="@color/colorPrimaryDark" />

                        <ImageView
                            android:id="@+id/spinner_img_followdate"
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            android:layout_margin="1dp"
                            android:layout_weight="4"
                            android:padding="7.5dp"
                            android:src="@drawable/drop_icon" />
                    </LinearLayout>


                </LinearLayout>
                <LinearLayout

                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:minHeight="50dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="fill_parent"
                        android:gravity="center|left"
                        android:text="NextDate"
                        android:textColor="@android:color/black"
                        android:textSize="17sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/custom_square_transparent_bg"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <Spinner
                            android:id="@+id/nextfollowdate"
                            android:layout_width="match_parent"

                            android:layout_height="wrap_content"
                            android:layout_marginLeft="3dp"
                            android:layout_weight="1"
                            android:background="@android:color/transparent"
                            android:padding="3dp" />

                        <View
                            android:layout_width="1.5dp"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="3.5dp"
                            android:layout_marginTop="3.5dp"
                            android:background="@color/colorPrimaryDark" />

                        <ImageView
                            android:id="@+id/spinner_img_nextfollowdate"
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            android:layout_margin="1dp"
                            android:layout_weight="4"
                            android:padding="7.5dp"
                            android:src="@drawable/drop_icon" />
                    </LinearLayout>


                </LinearLayout>

                <LinearLayout

                    android:id="@+id/logged_emp"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:minHeight="50dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="fill_parent"
                        android:gravity="center|left"
                        android:text="User"
                        android:textColor="@android:color/black"
                        android:textSize="17sp" />

                    <LinearLayout
                        android:id="@+id/layout_user"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/custom_square_transparent_bg"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <Spinner
                            android:id="@+id/party_user"
                            android:layout_width="match_parent"

                            android:layout_height="wrap_content"
                            android:layout_marginLeft="3dp"
                            android:layout_weight="1"
                            android:background="@android:color/transparent"
                            android:padding="3dp" />

                        <View
                            android:layout_width="1.5dp"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="3.5dp"
                            android:layout_marginTop="3.5dp"
                            android:background="@color/colorPrimaryDark" />

                        <ImageView
                            android:id="@+id/spinner_img_user"
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            android:layout_margin="1dp"
                            android:layout_weight="4"
                            android:padding="7.5dp"
                            android:src="@drawable/drop_icon" />
                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="fill_parent"
                        android:gravity="center|left"
                        android:text="Remark"
                        android:textColor="@android:color/black"
                        android:textSize="17sp" />

                    <LinearLayout
                        android:id="@+id/layout_website"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/custom_square_transparent_bg"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/remark"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:background="#fff"
                            android:hint="Remark"

                            android:padding="25dp" />


                    </LinearLayout>


                </LinearLayout>



                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_gravity="bottom"
                    android:layout_marginTop="10dp"
                    >
                    <Button
                        android:layout_width="fill_parent"
                        android:layout_height="40dp"
                        android:background="@color/colorPrimaryDark"
                        android:id="@+id/show"
                        android:text="Show"
                        android:textStyle="bold"
                        android:textColor="#fff"
                        android:textAllCaps="false"
                        android:layout_marginTop="40dp"
                        />

                </LinearLayout>


            </LinearLayout>
        </ScrollView>
    </LinearLayout>




</LinearLayout>
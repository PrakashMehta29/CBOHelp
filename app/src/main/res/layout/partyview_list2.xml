<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="4dp"
    android:foreground="?android:attr/selectableItemBackground"
    card_view:cardBackgroundColor="@android:color/white"
    card_view:cardElevation="2dp"
    card_view:cardUseCompatPadding="false">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/card_edge"
        >
        <LinearLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/PartyHeader"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:text="A"
                android:textColor="#fff"
                android:gravity="center"
                android:background="@drawable/party_header_background"
                android:textSize="20sp"
                android:layout_gravity="center_vertical"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="2dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="2dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mail From: "
                        android:id="@+id/title"
                        android:lines="1"
                        android:textColor="@color/colorPrimaryDark"
                        android:textStyle="bold"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mail From: "
                        android:id="@+id/year"
                        android:textColor="@color/colorPrimary"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/wer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="5">

                    <TextView
                        android:id="@+id/person"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:gravity="left"
                        android:textColor="#000"
                        android:text="Mail From: "
                        android:textSize="14sp" />

                    <ImageView
                        android:id="@+id/Editparty"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:gravity="right"
                        android:text="View"
                        android:textAllCaps="false"
                        android:layout_weight="2"
                        android:textColor="#fff"
                        android:src="@android:drawable/ic_menu_edit"
                        android:textSize="14sp"
                        />

                    <ImageView
                        android:id="@+id/partyview"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:gravity="center"
                        android:text="View"
                        android:textAllCaps="false"
                        android:visibility="gone"
                        android:textColor="#fff"
                        android:src="@android:drawable/ic_menu_view"
                        android:textSize="14sp"
                        />






                </LinearLayout>



                <TextView
                    android:id="@+id/user"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Javed ---> Arvind"
                    android:lines="1"
                    android:visibility="gone"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_weight="1"/>
                <com.example.pc24.cbohelp.utils.UnderlineTextView
                    android:id="@+id/mobile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="98641xxxxx"
                    android:lines="1"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_weight="1"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="2dp"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/mail_subto"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mail From:"
                        android:lines="1"
                        android:textColor="@color/colorPrimaryDark"
                        android:layout_weight="1"/>

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="18dp"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/attach"
                        android:id="@+id/attach"/>

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="left"
                  >



                    <TextView
                        android:layout_width="wrap_content"                                                             android:layout_height="wrap_content"
                        android:gravity="left"
                        android:textStyle="bold"
                        android:visibility="gone"
                        android:textColor="@color/colorPrimaryDark"
                        android:text="Last Remark :"
                        android:textSize="14sp" />
                    <TextView
                        android:id="@+id/Lremark"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:gravity="left"
                        android:textColor="#8c8c8c"
                        android:text="Mail From: "
                        android:textSize="14sp" />





                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
</android.support.v7.widget.CardView>